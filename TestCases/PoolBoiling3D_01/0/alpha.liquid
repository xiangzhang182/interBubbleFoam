FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      alpha.liquid;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 0 0 0 0];

internalField   uniform 0;

boundaryField
{
    
    "(Walls|Base)"
    {
        type           constantAlphaContactAngle;
        theta0         5;                                   
        limit          gradient;
        value          uniform 0;
    }
    

    Top
    {
        type            inletOutlet;
        inletValue      uniform 1;
        value           uniform 1;
    }

    frontAndBack
    {
        type            empty;
    }
}


