FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "constant";
    object      bubbleCloudProperties;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solution
{
    active          true;   
    coupled         true;                   
    transient       yes;
    cellValueSourceCorrection on;
    maxCo           0.3;

    sourceTerms                           // Need to add volume source term 
    {
        schemes
        {
            U               explicit 1;
            T               semiImplicit 1;
        }
    }

    interpolationSchemes                 
        
    {
        rho             cellPoint;
        U               cellPoint;
        mu              cellPoint;
        alpha.liquid    cellPoint;
        T               cellPoint;            
        n_hat           cellPoint;
        cp              cellPoint;
        kappa           cellPoint;
		sigma           cellPoint;
    }

    integrationSchemes
    {
        U               Euler;
    }
}


constantProperties
{
    rho0            50;

    constantVolume  false;    

    //Not sure whether alphaMax is actually used anywhere
    alphaMax        0.5;  //CHW - Added for determination of alphac in main solver
}


subModels
{
    particleForces     // Do we need more here? Lift, virtual mass? 
    {
        sphereDrag;
        gravity;
        InterfacePinning;
		NucleatingBubblePinning;
    }

    injectionModels    
    {
        
    }

    collisionModel none; 

    dispersionModel none;     //stochasticDispersionRAS;

    patchInteractionModel standardWallInteraction;
   
    compositionModel singleMixtureFraction;

    phaseChangeModel none;    

    devolatilisationModel none; 

    surfaceReactionModel none; 

    stochasticCollisionModel none; 

    surfaceFilmModel none; 

    radiation       off;  

    standardWallInteractionCoeffs
    {
        type            rebound;
    }

}

cloudFunctions
{
  
}


NucleateBoiling
{
	active true;
    patch Base;
	
	SiteDensity 2E4; //nucleation sites per area
	
	
	//WaitingTime 1E-3; //Placeholder model for waiting time between bubble release and next bubble creation
	
	RadiusDistribution
	{
		type        fixedValue;
		fixedValueDistribution
		{
			 value       1E-5;
		}
		
	}


}


