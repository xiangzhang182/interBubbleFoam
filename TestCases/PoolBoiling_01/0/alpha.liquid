FoamFile
{
    version     2.0;
    format      ascii;
    arch        "LSB;label=32;scalar=64";
    class       volScalarField;
    location    "0";
    object      alpha.liquid;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 0 0 0 0];

internalField   uniform 1;

boundaryField
{
    Walls
    {
        type            constantAlphaContactAngle;
        theta0          60;
        limit           gradient;
        value           uniform 1;
    }
    Top
    {
        type            inletOutlet;
        inletValue      uniform 0;
        value           uniform 0;
    }
    Heater
    {
        type            constantAlphaContactAngle;
        theta0          60;
        limit           gradient;
        value           uniform 1;
    }
}


