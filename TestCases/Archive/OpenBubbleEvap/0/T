FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      T;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions          [0 0 0 1 0 0 0];

internalField       uniform 300.15;

boundaryField
{
    "(Walls|Inlet)"

    {
        type            fixedValue;
        value           uniform 320;
    }

    Top
    {
        type            zeroGradient;
        value           $internalField;
    }

    FrontAndBack
    {
        type            empty;
    }

}


