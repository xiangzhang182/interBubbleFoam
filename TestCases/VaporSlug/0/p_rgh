FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      p_rgh;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions          [ 1 -1 -2 0 0 0 0 ];

internalField       uniform 0;

boundaryField
{
    Base
    {
        type            fixedFluxPressure;
        value           $internalField;
    }
    
    Walls
    {
        type            fixedFluxPressure;
        value           $internalField;
    }
    
    Inlet
    {
        type            totalPressure;
        p0              uniform 0;
    }

    Outlet
    {
        type            totalPressure;
        p0              uniform 0;
    }

}


